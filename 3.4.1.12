#!/usr/bin/env python3
class Timer:
    def __init__(self,h=0,m=0,s=0):
        self.__h=h
        self.__m=m
        self.__s=s

    def __str__(self):
        hour=str(self.__h)
        if hour=="0":hour="00"
        minute=str(self.__m)
        if minute=="0":minute="00"
        second=str(+self.__s)
        if second=="0":second="00"
        return hour+":"+minute+":"+second

    def next_second(self):
        self.__s+=1
        if self.__s>59:
            self.__s=00
            self.__m+=1
            if self.__m>59:
                self.__m=00
                self.__h+=1
                if self.__h>23:
                    self.__h=00

    def prev_second(self):
        self.__s-=1
        if self.__s<0:
            self.__s=59
            self.__m-=1
            if self.__m<0:
                self.__m=59
                self.__h-=1
                if self.__h<0:
                    self.__h=23

timer = Timer(23, 59, 59)
print(timer)
timer.next_second()
print(timer)
timer.prev_second()
print(timer)
